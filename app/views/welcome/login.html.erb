<h1>Login</h1>

<%= form_for :login do |f| %>
  <p>
    <%= f.label :email, 'Email' %><br>
    <%= f.text_field :email %>
  </p>
 
  <p>
    <%= f.label :password, 'Password' %><br>
    <%= f.text_field :password %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>

<h2>Sign Up</h2>
<p>
    <%= f.label :new_email, 'Email' %><br>
    <%= f.text_field :new_email %>
</p>
 
<p>
    <%= f.label :new_password, 'Password' %><br>
    <%= f.text_field :new_password %>
</p>
 
<p>
    <%= f.label :confirm_password, 'Confirm Password' %><br>
    <%= f.text_field :confirm_password %>
</p>
	
 <p>
    <%= f.submit :SignUp %>
</p>
<% end %>