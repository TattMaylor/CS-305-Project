<ul>
<% @teachers.each do |teacher| %>
   <TR>
      <TD><center> <%= teacher.firstname %></center></TD>
      <TD><center> <%= teacher.lastname %></center></TD>
      <TD><center> <%= teacher.email %></center></TD>
