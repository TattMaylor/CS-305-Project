   </TR>
      <TH><center>First Name</center></TH>
      <TH><center>Last Name</center></TH>
      <TH><center>Study ID</center></TH>
      <TH><center>Enrollment Status</center></TH>
      <TH><center></center></TH>
<ul>
<% @students.each do |student| %>
   <TR>
      <TD><center> <%= student.firstname %></center></TD>
      <TD><center> <%= student.lastname %></center></TD>
      <TD><center> <%= student.sid %></center></TD>
      <TD><center> <%= student.enrollment %></center></TD>
      <TD><center> <%= link_to 'Unenroll', student_path(student),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></center></TD>
   </TR>
<% end %>
</TABLE>
