<br>
  <center><h1>Create A New Teacher</h1></center>

<%= form_for :newteacher, url: teachers_new_path do |f| %>

  <% if @teacher.errors.any? %>
    <ul>
    <% @teacher.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

<div class="container">
  <div class="row">
    <div class="Absolute-Center is-Responsive">
      <div class="col-sm-12 col-md-10 col-md-offset-1">

<%= f.label :firstname, 'First Name' %>
<%= f.text_field :firstname %>

<%= f.label :lastname, 'Last Name' %>
<%= f.text_field :lastname %>

<%= f.label :email, 'Email' %>
<%= f.text_field :email %>

<%= f.label :new_password, 'Password' %>
<%= f.password_field :new_password %>

<%= f.label :new_password_confirmation, 'Confirm Password' %>
<%= f.password_field :new_password_confirmation %>

<%= f.check_box :super_box %>
<%= f.label :super_box, "Super Teacher" %>

<%= f.submit "Create" %>
</div>
</div>
</div>
</div>
<% end %>