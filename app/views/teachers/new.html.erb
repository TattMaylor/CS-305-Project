  <center><h1>Create A New Teacher</h1></center>

<%= form_for :newteacher, :html => {:class => "form-horizontal center"} do |f| %>
  
   <% if @teacher.errors.any? %>
    <ul>
    <% @teacher.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
    
  <div class="form-group">
        <%= f.label :firstname, "First Name:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :firstname, class: "form-control" %>
        </div>
  </div>
  <div class="form-group">
        <%= f.label :lastname, "Last Name:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :lastname, class: "form-control" %>
        </div>
  </div>

  <div class="form-group">
        <%= f.label :email, "Email:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :sid, class: "form-control" %>
        </div>
  </div>

  <div class="form-group">
        <%= f.label :new_password, "Password:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.password_field :new_password, class: "form-control" %>
        </div>
  </div>

  <div class="form-group">
        <%= f.label :new_password_confirmation, "Confirm Password:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.password_field :new_password_confirmation, class: "form-control" %>
        </div>
  </div>

  <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
          <button type="submit" class="btn btn-lg">Create</button>
      </div>
  </div>
<% end %>